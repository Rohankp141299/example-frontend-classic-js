<div class="article-page">
  <img class="article-page__main-image" src="{{{article.mainImage.asset.url}}}" />
  <h1 class="article-page__title">{{{article.title}}}</h1>
  <div class="article-page__meta">
    Created {{{dateTime article._createdAt}}} Updated: {{{dateTime article._updatedAt}}}
    <ul class="article-page__authors">
      {{#each article.authors}}
        <li class="article-page__author">
          <div class="article-page__author-image-container">
            <img src="{{{profileImage.asset.url}}}" class="article-page__author-image"/>
          </div>
          {{{name}}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="article-page__secondary-content">
    <div class="article-page__toc">
      TOC here
    </div>
  </div>
  <div class="article-page__primary-content">
    <d class="article-page__abstract">
      {{{article.abstract}}}
    </p>
  </div>
</div>
